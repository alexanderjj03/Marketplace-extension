{
  "manifest_version": 3,
  "name": "Marketplace Scraper",
  "version": "1.0.0",
  "description": "Extract data from Facebook Marketplace listings",
  "permissions": [
    "activeTab",
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "https://www.facebook.com/*",
    "https://facebook.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Marketplace Scraper"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.facebook.com/marketplace/*",
        "https://facebook.com/marketplace/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["popup.css"],
      "matches": ["https://www.facebook.com/*", "https://facebook.com/*"]
    }
  ]
}
