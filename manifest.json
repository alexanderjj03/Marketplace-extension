{
  "manifest_version": 3,
  "name": "Marketplace analyzer",
  "version": "1.0.0",
  "description": "Analyzes Facebook Marketplace listings for deals and scams",
  "permissions": [
    "activeTab",
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "https://www.facebook.com/*",
    "https://facebook.com/*"
  ],
  "action": {
    "default_popup": "src_alex/popup.html",
    "default_title": "Marketplace Scraper",
    "default_icon": "icons/icon48.png"
  },
  "content_scripts": [
    {
      "matches": ["*://www.facebook.com/marketplace*"],
      "js": ["dist/contentScript.bundle.js"],
      "css": ["src_alex/overlay.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["src_alex/popup.css"],
      "matches": ["https://www.facebook.com/*", "https://facebook.com/*"]
    }
  ]
}
